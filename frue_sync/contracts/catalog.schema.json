{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CatalogItem",
  "type": "object",
  "required": [
    "id",
    "name",
    "category_id",
    "price",
    "unit",
    "active"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "active": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "category_id": {
      "type": "string"
    },
    "category_name": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "unit": {
      "type": "string",
      "enum": [
        "kg",
        "l",
        "stk"
      ]
    },
    "short_desc": {
      "type": "string"
    },
    "long_desc": {
      "type": "string"
    },
    "origin": {
      "type": "string"
    },
    "taste": {
      "type": "string"
    },
    "season": {
      "type": "string"
    },
    "allergens": {
      "type": "string"
    },
    "storage": {
      "type": "string"
    },
    "usage": {
      "type": "string"
    },
    "certificates": {
      "type": "string"
    },
    "tags": {
      "type": "string"
    },
    "brand_quality": {
      "type": "string",
      "enum": [
        "bio",
        "demeter",
        ""
      ]
    },
    "asset_id": {
      "type": "string"
    },
    "qty_step": {
      "type": "number",
      "minimum": 0.01
    }
  },
  "additionalProperties": true
}